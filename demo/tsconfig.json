{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "lib": [
            "es6",
            "dom",
            "es2015.iterable",
            "es2017.object"
        ],
        "baseUrl": ".",
        "paths": {
            "@nota/nativescript-accessibility-ext/*": [
                "../src/*"
            ],
            "*": [
                "./node_modules/tns-core-modules/*",
                "./node_modules/*"
            ],
            "~/*": [
                "app/*"
            ]
        }
    },
    "files": [
        "./app/main.ts"
    ],
    "include": [
        "./app/**/*.ts",
        "../src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "platforms"
    ]
}
